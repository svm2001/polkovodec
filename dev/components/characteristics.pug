mixin characteristics(props = defaultCharacteristicsProps, ...dataset)
  -
    const checkProps = {
        classes: props.classes ? props.classes : defaultCharacteristicsProps.classes,
    }
  section.characteristics(data-smooth-scrolling="characteristics")
    .container
      h2.characteristics__title= characteristicsData.title
      .characteristics__inner
        .characteristics__items
          each item in characteristicsData.items
            .characteristics__item
              .characteristics__item-inner
                .characteristics__item-title= item.title
              .characteristics__item-icon
                img.lazy.characteristics__item-icon--static(
                  src="./images/no-image.jpg",
                  data-src=`./images/characteristics/icons/${item.icon}.svg`,
                  alt="img"
                )
                img.lazy.characteristics__item-icon--hover(
                  src="./images/no-image.jpg",
                  data-src=`./images/characteristics/icons/${item.iconHover}.svg`,
                  alt="img"
                )
              .characteristics__item-text= item.text
        .characteristics__accordions
          each item in characteristicsData.items
            .accordion
              .accordion__intro
                .accordion__icon
                  img.lazy.accordion__icon--static(
                    src="./images/no-image.jpg",
                    data-src=`./images/characteristics/icons/${item.icon}.svg`,
                    alt="img"
                  )
                .accordion__title= item.title
              .accordion__content= item.text
                img.lazy.accordion__icon--hover(
                    src="./images/no-image.jpg",
                    data-src=`./images/characteristics/icons/${item.iconHover}.svg`,
                    alt="img"
                )
        .characteristics__poster-inner
