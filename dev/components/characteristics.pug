mixin characteristics(props = defaultCharacteristicsProps, ...dataset)
  -
    const checkProps = {
        classes: props.classes ? props.classes : defaultCharacteristicsProps.classes,
    }
  section.js-kharakteristiki.characteristics
    .container 
      .characteristics__title= characteristicsData.title
      .characteristics__inner 
        .characteristics__items
          each item in characteristicsData.items
            .characteristics__item
              .characteristics__item-inner
                .characteristics__item-title= item.title
              .characteristics__item-icon
                img.characteristics__item-icon--static(src=`./images/characteristics/icons/${item.icon}.svg`, alt="img")
                img.characteristics__item-icon--hover(src=`./images/characteristics/icons/${item.iconHover}.svg`, alt="img")

              .characteristics__item-text= item.text
        .characteristics__poster-wrapper
          .characteristics__poster 
            each item, index in characteristicsData.items
              img(src=`./images/characteristics/${item.image}`, alt=item.title, class=index === 0 ? 'active' : '')
                
