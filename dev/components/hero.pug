-
  const defaultHeroProps = {
      classes: '',
      title: 'Универсальные телекоммуникационные',
      titleMob: 'Универсальные телекоммуникационные',
      markedTitle: 'шкафы ДОБРЫНЯ',
      subtitle: 'Эффективная организация пространства серверных помещений и мобильных передвижных пунктов',
      btnName: 'Собрать шкаф'
  }

mixin hero(props = defaultHeroProps, ...dataset)
  include ../ui/btn
  -
    const checkProps = {
        classes: props.classes ? props.classes : defaultHeroProps.classes,
        title: props.title ? props.title : defaultHeroProps.title,
        titleMob: props.titleMob ? props.titleMob : defaultHeroProps.titleMob,
        markedTitle: props.markedTitle ? props.markedTitle : defaultHeroProps.markedTitle,
        subtitle: props.subtitle ? props.subtitle : defaultHeroProps.subtitle,
        btnName: props.btnName ? props.btnName : defaultHeroProps.btnName,
    }
  section.section.hero
    .hero__bg
      img.lazy.hero__bg-full(
        data-src="./images/hero/bg.jpg",
        src="./images/no-image.jpg",
        alt="img"
      )
      img.lazy.hero__bg-center(
        data-src="./images/hero/locker.webp",
        src="./images/no-image.jpg",
        alt="img"
      )
      img.lazy.hero__bg-mob(
        data-src="./images/hero/bg-mob.webp",
        src="./images/no-image.jpg",
        alt="img"
      )

    .container
      .hero__inner
        h1.hero__title
          .js-motion.js-motion--desk
            span.hero__title-text Универсальные
          .js-motion.js-motion--desk
            span.hero__title-text телекоммуникационные
          .js-motion.js-motion--mob
            span.hero__title-text.hero__title-text--mob Универсальные
          .js-motion.js-motion--mob
            span.hero__title-text.hero__title-text--mob телекоммуникационные
          .js-motion
            span
              span.hero__title-marked= checkProps.markedTitle
                sup ®
          .js-motion.hero__subtitle-wrapper.js-motion--subtitle
            p.hero__subtitle-mask Эффективная организация пространства серверных <br>помещений и мобильных передвижных пунктов
            span.hero__subtitle Эффективная организация пространства серверных <br>помещений и мобильных передвижных пунктов
          .js-motion.js-motion--btn
            span
              +btn({ name: checkProps.btnName }, {'data-smooth-scrolling': '#configurator'})
